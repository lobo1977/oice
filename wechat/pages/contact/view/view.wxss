/* pages/contact/view/view.wxss */
.page-content {
  padding-bottom:160rpx;
}

.name-card {
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width:92%;
  height:260rpx;
  border: 1rpx solid #e0e0e0;
  background-color: #f5f5f5;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-radius: 6rpx;
}

.name-card .row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.name-card image {
  margin-top: -20rpx;
  width:200rpx;
  height:120rpx;
}

.name-card .title {
  margin:40rpx 0 20rpx 0;
  font-size: 45rpx;
  font-weight: bold;
}

.name-card .company {
  font-size: 30rpx;
}

.name-card .contact {
  font-size:0.8em;
  line-height:1.6em;
}