<!--pages/customer/Log/log.wxml-->
<wxs src='../../../utils/filter.wxs' module='filter' />
<view class="page-view">
  <van-cell-group>
    <van-field title-width="50px" value="{{ filter.formatTime(start_time) }}" label="时间" required right-icon="calender-o" readonly clickable />
    <van-field title-width="50px" value="{{ title }}" label="摘要" required placeholder="{{ title_error }}" error="{{is_title_empty}}" maxlength="10" />
    <van-field title-width="50px" value="{{ summary }}" label="详情" type="textarea" maxlength="200" />
  </van-cell-group>

  <van-row gutter="0" custom-class="button-bar">
    <van-col span="24">
      <van-button type="primary" icon="sign" block bindtap="bindSaveLog">保存</van-button>
    </van-col>
  </van-row>
</view>
